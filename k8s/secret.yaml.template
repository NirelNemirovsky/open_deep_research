# Kubernetes Secret Template for Open Deep Research
# 
# INSTRUCTIONS:
# 1. Copy this file to secret.yaml
# 2. Replace the placeholder values with your actual API keys
# 3. Base64 encode each value: echo -n "your_api_key" | base64
# 4. Apply the secret: kubectl apply -f secret.yaml
#
# WARNING: Never commit secret.yaml to version control!

apiVersion: v1
kind: Secret
metadata:
  name: open-deep-research-secrets
  labels:
    app: open-deep-research
    component: research-agent
type: Opaque
data:
  # Required API Keys
  google_api_key: "REPLACE_WITH_BASE64_ENCODED_GOOGLE_API_KEY"
  tavily_api_key: "REPLACE_WITH_BASE64_ENCODED_TAVILY_API_KEY"
  langsmith_api_key: "REPLACE_WITH_BASE64_ENCODED_LANGSMITH_API_KEY"
  
  # Optional API Keys (uncomment and fill as needed)
  # openai_api_key: "REPLACE_WITH_BASE64_ENCODED_OPENAI_API_KEY"
  # anthropic_api_key: "REPLACE_WITH_BASE64_ENCODED_ANTHROPIC_API_KEY"
  # groq_api_key: "REPLACE_WITH_BASE64_ENCODED_GROQ_API_KEY"
  # deepseek_api_key: "REPLACE_WITH_BASE64_ENCODED_DEEPSEEK_API_KEY"
  # exa_api_key: "REPLACE_WITH_BASE64_ENCODED_EXA_API_KEY"
  
  # Azure OpenAI (if using)
  # azure_openai_api_key: "REPLACE_WITH_BASE64_ENCODED_AZURE_OPENAI_API_KEY"
  # azure_openai_endpoint: "REPLACE_WITH_BASE64_ENCODED_AZURE_OPENAI_ENDPOINT"
  
  # Supabase (if using)
  # supabase_url: "REPLACE_WITH_BASE64_ENCODED_SUPABASE_URL"
  # supabase_key: "REPLACE_WITH_BASE64_ENCODED_SUPABASE_KEY"
