# Open Deep Research Environment Configuration
# Copy this file to .env and fill in your API keys

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# Google AI (Gemini) API Key (required for default configuration)
GOOGLE_API_KEY=your_google_api_key_here

# Tavily Search API Key (required for web search)
TAVILY_API_KEY=your_tavily_api_key_here

# =============================================================================
# OPTIONAL API KEYS FOR ALTERNATIVE PROVIDERS
# =============================================================================

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Groq
GROQ_API_KEY=your_groq_api_key_here

# DeepSeek
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Azure OpenAI
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint_here

# Exa Search
EXA_API_KEY=your_exa_api_key_here

# Supabase (for data persistence)
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_key_here

# =============================================================================
# LANGCHAIN & LANGSMITH CONFIGURATION
# =============================================================================

# LangSmith (for tracing and evaluation)
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=open-deep-research
LANGSMITH_TRACING=true

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Server Configuration
LANGGRAPH_HOST=0.0.0.0
LANGGRAPH_PORT=2024

# Research Configuration
MAX_SEARCH_DEPTH=3
MAX_SEARCH_RESULTS=10
MAX_PARALLEL_SEARCHES=5

# Report Configuration
REPORT_FORMAT=markdown
INCLUDE_SOURCES=true
INCLUDE_METADATA=true

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Model Selection (see configuration.py for available options)
# Summarization Model
SUMMARIZATION_MODEL=google:gemini-2.5-flash

# Research Model  
RESEARCH_MODEL=google:gemini-2.5-flash

# Compression Model
COMPRESSION_MODEL=google:gemini-2.5-flash

# Final Report Model
FINAL_REPORT_MODEL=google:gemini-2.5-flash

# =============================================================================
# SEARCH CONFIGURATION
# =============================================================================

# Search API Selection
SEARCH_API=tavily

# MCP Configuration (Model Context Protocol)
MCP_ENABLED=false
MCP_SERVERS=

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Authentication (for production deployments)
AUTH_ENABLED=false
AUTH_SECRET_KEY=your_secret_key_here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:2024

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level
LOG_LEVEL=INFO

# Enable Debug Mode
DEBUG=false

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker-specific settings
DOCKER_MODE=true
CONTAINER_NAME=open-deep-research
